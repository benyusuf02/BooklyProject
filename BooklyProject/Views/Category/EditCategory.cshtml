@model BooklyProject.Entities.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2> Kategori Güncelle</h2>
<form method="post">
    <label>Kategori Adı</label>
    <input type="hidden" name="CategorId" value="@Model.CategoryId" class="form-control" />
    @Html.HiddenFor(model => model.CategoryId)

    <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control" />

    <label>Görsel Url</label>
    <input type="text" name="CategoryUrl" value="@Model.ImageUrl" class="form-control" />
    <br />
    <button class="btn btn-outline-dark"><i class="fa fa-pen">Kaydet</i> Güncelle</button>
</form>
